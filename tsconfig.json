{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "declaration": true,
    "module": "CommonJS",
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "android", "ios", "web", "dist"]
}
